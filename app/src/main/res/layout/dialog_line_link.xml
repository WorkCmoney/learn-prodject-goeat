<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280sp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:layout_gravity="center">

    <FrameLayout
        android:id="@+id/fram"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            android:layout_marginTop="40sp"
            android:id="@+id/congratulation_card"
            app:cardBackgroundColor="#ffffff"
            app:cardElevation="0dp"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/title"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="48dp"
                    android:text="邀請朋友點餐" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24sp"
                    android:layout_marginHorizontal="10sp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/edit_link_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8sp"
                        android:background="@drawable/bg_link_text"
                        android:text="https://www.google.com" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_cancel_d"
                        android:layout_width="55sp"
                        android:layout_height="wrap_content"
                        android:text="返回" />

                    <Button
                        android:id="@+id/btn_copy_d"
                        android:layout_width="55sp"
                        android:layout_height="wrap_content"
                        android:text="複製"
                        android:layout_gravity="center" />

                    <Button
                        android:id="@+id/btn_invite_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="邀請"
                        android:drawableRight="@drawable/ic_share_black_24dp"
                        android:drawablePadding="-30sp"
                        android:paddingRight="45sp" />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            app:srcCompat="@drawable/ic_line"
            android:layout_gravity="center_horizontal|top"
            android:tint="#ffffff"
            android:tintMode="multiply"/>

    </FrameLayout>

</LinearLayout>