<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8sp"
    android:layout_margin="10sp"
    cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="16sp"
    app:cardMaxElevation="6sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="CMoney 程式戰鬥營 下午茶"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10sp"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">

        <TextView
            android:layout_width="80sp"
            android:layout_height="match_parent"
            android:text="店家"
            android:gravity="center|left"
            android:textColor="@color/colorAccent" />

        <com.example.user.goeat_3.RoundImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/menu_food"
            app:type="round"
            tools:ignore="MissingPrefix"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="繼光香香雞"
            android:gravity="center|left"
            android:layout_marginLeft="10sp" />

    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/main_bg"
            android:layout_marginTop="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="80sp"
                android:layout_height="match_parent"

                android:text="發起人"
                android:gravity="center|left"
                android:textColor="@color/colorAccent" />

            <com.example.user.goeat_3.RoundImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/menu_food"
                app:type="circle"
                tools:ignore="MissingPrefix"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Cheng"
                android:textSize="16sp"
                android:gravity="center|left"
                android:layout_marginLeft="10sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/main_bg"
            android:layout_marginTop="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:text="結單時間"
                android:gravity="center|left"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2019年1月9日"
                android:gravity="center|left"
                android:layout_marginLeft="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="12:00"
                android:gravity="center|left"
                android:layout_marginLeft="10sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/main_bg"
            android:layout_marginTop="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:text="取餐時間"
                android:gravity="center|left"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2019年1月9日"
                android:gravity="center|left"
                android:layout_marginLeft="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="15:00"
                android:gravity="center|left"
                android:layout_marginLeft="10sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/main_bg"
            android:layout_marginTop="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:text="備註"
                android:gravity="center|left"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="大家辛苦了,選個好吃的蛋糕跟飲料,一起吃個下午茶放鬆一下吧!(請自備零錢喔)"
                android:gravity="center|left|top"
                android:layout_marginLeft="10sp"
                android:ellipsize="end"
                android:maxLines="10"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/main_bg"
            android:layout_marginTop="10sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="我要點餐"
            android:layout_marginVertical="10sp"
            android:background="@drawable/button"
            android:textColor="@color/white"/>

    </LinearLayout>

</android.support.v7.widget.CardView>