<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_bg">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="第一步、填寫店家資訊"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:padding="10sp"
        android:background="@color/bg_search" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:layout_below="@id/title"
        android:layout_above="@id/line1"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="20sp"
        app:cardMaxElevation="6sp"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30sp">

            <com.example.user.goeat_3.RoundImageView
                android:id="@+id/store_img"
                android:layout_width="150sp"
                android:layout_height="100sp"
                android:layout_marginVertical="25sp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/menu_food"
                android:layout_gravity="center"
                app:type="round"
                tools:ignore="MissingPrefix"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_store_photo"
                android:layout_gravity="center"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="20sp">

                <TextView
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:text="店名 :"
                    android:textColor="@color/colorAccent" />
                edit_storeName
                <EditText
                    android:id="@+id/edi_storeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="請輸入店名"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:text="電話 :"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="請輸入電話"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:text="地址 :"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="請輸入地址"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:text="開始營業 :"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="時"
                    android:layout_marginLeft="4sp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:layout_marginLeft="4sp"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:layout_marginLeft="4sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:text="結束營業 :"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="時"
                    android:layout_marginLeft="4sp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:layout_marginLeft="4sp"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:layout_marginLeft="4sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:text="分類 :"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="請選擇分類"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/button"
        android:orientation="horizontal"
        android:paddingVertical="10sp">

        <TextView
            android:id="@+id/btn_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="返回"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="下一步"
            android:background="?android:attr/selectableItemBackground"/>

    </LinearLayout>

</RelativeLayout>